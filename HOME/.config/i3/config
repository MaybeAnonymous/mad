set $mod Mod4
set $alt Mod1

gaps top 23
gaps inner 6
for_window [class="^.*"] border pixel 1

# Class                  Border  BG      Text    Indicator Child border
client.focused           #fb4934 #0000ff #ffff33 #fb4934   #fb4934
client.unfocused         #575268 #424242 #1d1f21 #1d1f21   #575268

focus_follows_mouse no
